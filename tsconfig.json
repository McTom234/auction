{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "importsNotUsedAsValues": "preserve",
    "module": "es6",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
  },
  "exclude": [
    "./node_modules",
    "build",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
