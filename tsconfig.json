{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "preserve",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "paths": {
      "*": [
        "node_modules/"
      ]
    }
  },
  "exclude": [
    "./node_modules",
    "**/*.spec.ts",
    "build",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
